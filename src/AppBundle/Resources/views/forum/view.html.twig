{% extends '@App/layout.html.twig' %}
{% block content %}
<h1> Détails sur le thème  </h1>
<ul>

  {#<li> <strong> Intitule :</strong> {{ themes.intitule }} </li>  #}
  {#<li> <strong> Date d'ajout :</strong>  {{ themes.date|date('d/m/Y') }} </li>#}
  </br>

</ul>
<ul>
{% for theme in themes %}
<li>
  <a href="{{ path('affichage', {'id': theme.id}) }}">  
   {{ theme.intitule }} 
  </a>
<li> {{ theme.date|date('d/m/Y') }} </li>
</br>
  {% for v2 in theme.messages %} 
          {# <h2> messages : {{ dump (theme.messages) }} </h2> #}
          <ul> message : 
          <li> <a href="{{ path('affichageMsg', {'id': v2.id})}}"> 
            {{ v2.titre }}
               </a>
           </li>
          <li>  {{ v2.contenu }} </li>
          </ul>
  {% endfor %}
  <p>
    <a href="{{ path('accueil') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste des thèmes
    </a>
    <a href="{{ path('modifier', {'id': theme.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      modifier le thème
    </a>
    <a href="{{ path('supprimer', {'id': theme.id} ) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer le thème
    </a>
  </p>
  <a href="{{ path('ajoutMsg', {'id': theme.id} ) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Poser une question
    </a>
  <p>
  </p>
{% endfor %}
</ul>



{% endblock %}